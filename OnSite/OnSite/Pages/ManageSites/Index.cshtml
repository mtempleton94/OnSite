@model OnSite.Pages.ManageSites.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Site[0].StreetAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Site[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Site[0].State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Site[0].PostCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Site[0].Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Site[0].Email)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Site[0].Organisation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Site) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organisation.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SiteId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SiteId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SiteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
