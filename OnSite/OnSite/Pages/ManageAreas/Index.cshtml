    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Area[0].Floor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Area[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Area[0].Classification)
