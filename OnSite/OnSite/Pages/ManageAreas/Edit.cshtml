@page
@model OnSite.Pages.ManageAreas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Area</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Area.AreaId" />
            <div class="form-group">
                <label asp-for="Area.Floor" class="control-label"></label>
                <input asp-for="Area.Floor" class="form-control" />
                <span asp-validation-for="Area.Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.Description" class="control-label"></label>
                <input asp-for="Area.Description" class="form-control" />
                <span asp-validation-for="Area.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.Classification" class="control-label"></label>
                <input asp-for="Area.Classification" class="form-control" />
                <span asp-validation-for="Area.Classification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.SiteId" class="control-label"></label>
                <select asp-for="Area.SiteId" class="form-control" asp-items="ViewBag.SiteId"></select>
                <span asp-validation-for="Area.SiteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
